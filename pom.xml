	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>17</java.version>
		<start-class>com.testoptimal.server.Application</start-class>
		<maven.compiler.source>17</maven.compiler.source>
		<maven.compiler.target>17</maven.compiler.target>
		<timestamp>${maven.build.timestamp}</timestamp>
		<maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
		<to.version>${project.version}</to.version>
		<build.date>${timestamp}</build.date>
	</properties>
	
	<build>
		<plugins>
			<plugin>
			  <groupId>org.codehaus.mojo</groupId>
			  <artifactId>properties-maven-plugin</artifactId>
			  <version>1.0.0</version>
			  <executions>
			    <execution>
			      <id>one</id>
			      <phase>initialize</phase>
			      <goals>
			        <goal>write-project-properties</goal>
			      </goals>
			      <configuration>
			        <outputFile>src/main/resources/TO.properties</outputFile>
			      </configuration>
			    </execution>
			  </executions>
			</plugin>	
				
	       <plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-compiler-plugin</artifactId>
	            <configuration>
	                <excludes>
	                    <exclude>**/com/testoptimal/license/LicenseManager.javax</exclude>
	                    <exclude>**/TOWebSite/</exclude>
	                </excludes>
	            </configuration>
	        </plugin>
		   	<plugin>
		        <artifactId>maven-antrun-plugin</artifactId>
		        <executions>
					<execution>
					    <id>deploy-win</id>
					    <phase>install</phase>
					    <goals>
					        <goal>run</goal>
					    </goals>
					    <configuration>
					        <target>
					        	<property name="releaseLabel" value="${project.version}"/>
								<property name="releaseBuildDir" value = "build" />
								<property name="productName" value="${project.groupId}_${project.artifactId}"/>
								
						  		<delete includeEmptyDirs="true" failonerror="false">
						  		  	<fileset dir="${releaseBuildDir}/TestOptimal_win/" includes="**"/>
						  		</delete>
								<mkdir dir="${releaseBuildDir}/TestOptimal_win/work/" />
							  	<copy todir="${releaseBuildDir}/TestOptimal_win/">
							    	<fileset dir="buildDef/shared/" includes="**/*"/>
							  	</copy>
							  	<copy todir="${releaseBuildDir}/TestOptimal_win/">
							    	<fileset dir="buildDef/TestOptimal_win/" includes="**/*"/>
							  	</copy>
							  	<copy file="target/${project.artifactId}-${releaseLabel}.jar" tofile="${releaseBuildDir}/TestOptimal_win/${productName}.jar"/>
							  	<zip destfile="${releaseBuildDir}/${productName}_${releaseLabel}_win.zip"
							       basedir="${releaseBuildDir}/TestOptimal_win"
							  	/>
							  	
						  		<delete includeEmptyDirs="true" failonerror="false">
						  		  	<fileset dir="${releaseBuildDir}/TestOptimal_mac/" includes="**"/>
						  		</delete>
								<mkdir dir="${releaseBuildDir}/TestOptimal_mac/work/" />
								<copy todir="${releaseBuildDir}/TestOptimal_mac/">
							    	<fileset dir="buildDef/shared/" includes="**/*"/>
							  	</copy>
							  	<copy todir="${releaseBuildDir}/TestOptimal_mac/">
							    	<fileset dir="buildDef/TestOptimal_mac/" includes="**/*"/>
							  	</copy>
							  	<copy file="target/${project.artifactId}-${releaseLabel}.jar" tofile="${releaseBuildDir}/TestOptimal_mac/${productName}.jar"/>
							  	<zip destfile="${releaseBuildDir}/${productName}_${releaseLabel}_mac.zip">
							  		 <zipfileset filemode="755" dir="${releaseBuildDir}/TestOptimal_mac" includes="**/*"/>
							  	</zip>
					        </target>
					    </configuration>
					</execution>
		        </executions>
		    </plugin>		
		    <!-- comment out following plugin to generate project jar only -->

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
	            <configuration>
	                <mainClass>com.testoptimal.server.Application</mainClass>
	                <layout>ZIP</layout>
				    <addResources>true</addResources>
       				<includeSystemScope>true</includeSystemScope>
		            <executions>
		                <execution>
		                    <goals>
		                        <goal>repackage</goal>
		                    </goals>
		                </execution>
		            </executions>       				
       	        </configuration>
			</plugin>

	      <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-javadoc-plugin</artifactId>
			    <configuration>
			        <links>
			            <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
			        </links>
			        <show>public</show>
			        <doctitle>TestOptimal API</doctitle>
			        <title>TestOptimal API</title>
			        <bottom><![CDATA[Copyright TestOptimal, LLC]]></bottom>
			        <sourceFileIncludes>
						<include>exec/mscript/Exec.java</include>
					</sourceFileIncludes>
			        <sourcepath>${basedir}/src/main/java/com/testoptimal</sourcepath>
			        <classpath>${basedir}/src/main/java</classpath>
                    <configuration>
		                <additionalparam>-Xdoclint:none</additionalparam>
						<failOnError>false</failOnError>
		            </configuration>
			    </configuration>
			</plugin>
			

		</plugins>
	</build>
	
